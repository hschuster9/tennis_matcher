<div class="eventlinks">
  <h4><%= link_to "< Back to Event", event_path %></h4>
</div>

<div class="titles">
  <h3> Edit: <%= @event.title %></h3>
</div>

<%= form_for  @event do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
<br>
<br>
  <%= f.label :posted_by, "By" %>
  <%= f.text_field :posted_by %>

<br>
<br>
  <%= f.label :location, "Where" %>
  <%= f.text_field :location %>
<br>
<br>
<%= f.label :level %>
<%= f.number_field(:level, in: 1.0..7.0, step: 0.5) %>
<br>
<br>
    <%= f.label :description %>
    <%= f.text_area :description %>

<br>
<br>
<br>


<%= f.submit "Update", :class =>"button_style"%>

  <% end %>

<br>
<br>
  <%= form_for @event, url: event_path, method: :delete do |f| %>
  <% f.submit "Delete", :class =>"button_style"%>
  <% end %>
