<div class="eventlinks">
  <h4><%= link_to "< Back to All Events", events_path %></h4>
</div>

<div class="titles">
  <h2> Create New Event</h2>
</div>

<div class="form">
<%= form_for  @event do |f| %>
  <%= f.label :title, "Title:" %>
  <%= f.text_field :title %>
<br>
<br>
  <%= f.label :posted_by, "By:" %>
  <%= f.text_field :posted_by %>
<br>
<br>
  <%= f.label :location, "Where:" %>
  <%= f.text_field :location %>
<br>
<br>
  <%= f.label :level, "Level:" %>
  <%= f.select :level, options_for_select((1..7).step(0.5)) %>
<br>
<br>
  <%= f.label :description, "Description:" %>
  <%= f.text_area :description %>
<br>
<br>
<br>
<br>

<%= f.submit "Create", :class =>"button_style"%>
  <% end %>
